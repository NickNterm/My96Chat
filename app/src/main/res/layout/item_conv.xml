<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_conv_image"
        android:layout_width="@dimen/item_conv_image_size"
        android:layout_height="@dimen/item_conv_image_size"
        android:layout_margin="@dimen/item_conv_image_margin"
        android:src="@drawable/ic_baseline_face_24" />

    <TextView
        android:id="@+id/item_conv_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/item_conv_name_text_size"
        android:textStyle="bold" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grayColor"
        android:layout_height="@dimen/view_divider_size"/>
</LinearLayout>